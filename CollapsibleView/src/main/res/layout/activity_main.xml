<RelativeLayout
        xmlns:custom="http://schemas.android.com/apk/res/pt.rmvt.collapsibleview"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">

    <!-- orientation must be added automatically -->
    <pt.rmvt.collapsibleview.CollapsibleLayout
            android:id="@+id/collapsible"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:hiddenStateDrawable="@android:drawable/ic_input_add"
            custom:visibleStateDrawable="@android:drawable/ic_input_delete" >

        <RelativeLayout
                android:id="@+id/timeform_header_RelativeLayout"
                android:tag="@string/collapsibleLayoutAction"
                android:layout_width="match_parent"
                android:layout_height="@dimen/timeformHeaderHeight">

            <ImageView
                    android:id="@+id/timeform_logo_ImageView"
                    android:layout_width="@dimen/timeformHeaderLogoWidth"
                    android:layout_height="@dimen/timeformHeaderLogoHeight"
                    android:layout_marginTop="@dimen/timeformHeaderLogoMarginTopBottom"
                    android:layout_marginBottom="@dimen/timeformHeaderLogoMarginTopBottom"
                    android:layout_marginLeft="@dimen/timeformHeaderLogoMarginLeft"
                    android:src="@drawable/ic_launcher" />

            <ImageView
                    android:id="@+id/timeform_arrow_ImageView"
                    android:tag="@string/collapsibleLayoutStateIndicator"
                    android:layout_width="@dimen/timeformArrowWidth"
                    android:layout_height="@dimen/timeformArrowHeight"
                    android:layout_marginTop="@dimen/timeformArrowMarginTopBottom"
                    android:layout_marginBottom="@dimen/timeformArrowMarginTopBottom"
                    android:layout_marginRight="@dimen/timeformArrowMarginRight"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_launcher" />
        </RelativeLayout>


        <LinearLayout
                android:id="@+id/timeform_content_LinearLayout"
                android:tag="@string/collapsibleLayoutContent"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            <ListView
                    android:id="@+id/timeform_runners_ListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/timeformRunnersHeight" />

            <LinearLayout
                    android:id="@+id/timeform_timeformview_LinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                <TextView
                        android:id="@+id/timeform_timeformview_title_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/timeformViewTitleMarginLeft"
                        android:layout_marginTop="@dimen/timeformViewTitleMarginTop"
                        android:layout_marginBottom="@dimen/timeformViewTitleMarginBottom"
                        android:textSize="@dimen/timeformTextSize"
                        android:text="TITLE" />

                <TextView
                        android:id="@+id/timeform_timeformview_comment_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/timeformViewTextMarginBottom"
                        android:layout_marginLeft="@dimen/timeformViewTextMarginLeftRight"
                        android:layout_marginRight="@dimen/timeformViewTextMarginLeftRight"
                        android:textSize="@dimen/timeformTextSize"
                        android:text="TIMEFORM COMMENT" />
            </LinearLayout>
        </LinearLayout>

    </pt.rmvt.collapsibleview.CollapsibleLayout>

    <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/timeformViewTextMarginBottom"
            android:layout_marginLeft="@dimen/timeformViewTextMarginLeftRight"
            android:layout_marginRight="@dimen/timeformViewTextMarginLeftRight"
            android:layout_below="@+id/collapsible"
            android:textSize="@dimen/timeformTextSize"
            android:text="TEXTO TEXTO TEXTO" />

</RelativeLayout>
